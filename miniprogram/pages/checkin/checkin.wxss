/* pages/checkin/checkin.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.location-card {
  margin-bottom: 30rpx;
}

.location-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.location-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.location-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.location-info {
  padding-left: 55rpx;
}

.location-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.location-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.location-distance {
  font-size: 26rpx;
  color: #999;
}

.checkin-status {
  margin-bottom: 30rpx;
  text-align: center;
  padding: 40rpx 30rpx;
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.status-icon.success {
  color: #4caf50;
}

.status-icon.error {
  color: #f44336;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.status-text.success {
  color: #4caf50;
}

.status-text.error {
  color: #f44336;
}

.status-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.checkin-actions {
  margin-bottom: 30rpx;
}

.checkin-btn {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 30rpx;
  font-size: 36rpx;
}

.checkin-btn[disabled] {
  background: #ccc !important;
  color: #999 !important;
}

.rules-card {
  background: #f8f9fa;
  border-left: 6rpx solid #667eea;
}

.rules-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rules-content {
  padding-left: 20rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.rule-icon {
  font-size: 30rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}
